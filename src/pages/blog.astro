---
import Layout from '../components/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
const posts: CollectionEntry<'blog'>[] = await getCollection('blog');
---

<Layout title="Blog">
  <section class="py-16 px-6 fade-in">
    <h1 class="text-3xl font-bold text-primary mb-6">My Blog</h1>

    <ul class="space-y-6">
      {posts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}`} class="text-xl text-primary font-semibold hover:underline">
            {post.data.title}
          </a>
          <p class="text-sm text-gray-600">{post.data.date} Â· {post.data.description}</p>
        </li>
      ))}
    </ul>
  </section>
</Layout>

