---
import Navbar from '../components/Navbar.astro';
const { title = "My Portfolio" } = Astro.props; // Dynamic title prop, fallback is "My Portfolio"
---
<html lang="en">
  <head>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title> <!-- Page-specific title -->
  </head>
  <body class="bg-white text-gray-800 font-sans"> <!-- Light theme, readable font -->
    <Navbar /> <!-- Consistent top navigation on every page -->
    <main class="max-w-4xl mx-auto px-4 py-8"> <!-- Centered content with padding -->
      <slot /> <!-- Slot for page-specific content -->
    </main>
  </body>
</html>